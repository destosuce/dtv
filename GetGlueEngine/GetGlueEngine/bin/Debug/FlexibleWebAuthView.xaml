<Page
    x:Class="GetGlueEngine.FlexibleWebAuth"
    x:Name="fAuth"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' Background="#CA000000"                           >
        <Grid x:ConnectionId='2' Margin="0,100,0,100" Background="White"                           >
            <ProgressBar x:Name="pbLoading" Margin="0" IsIndeterminate="True" VerticalAlignment="Stretch"/>
            <WebView HorizontalAlignment="Center" Width="500" VerticalAlignment="Stretch" x:Name="wv" />
        </Grid>
    </Grid>
</Page>

